{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@budgt/budget/app-budget": ["libs/budget/app-budget/src/index.ts"],
      "@budgt/expenses/app-expenses": [
        "libs/expenses/app-expenses/src/index.ts"
      ],
      "@budgt/login/app-workspace": ["libs/login/app-workshop/src/index.ts"],
      "@budgt/login/app-login": ["libs/login/app-login/src/index.ts"],
      "@budgt/savings/app-savings": ["libs/savings/app-savings/src/index.ts"],
      "@budgt/shared/components": ["libs/shared/components/src/index.ts"],
      "@budgt/shared/functions": ["libs/shared/functions/src/index.ts"],
      "@budgt/shared/guards": ["libs/shared/guards/src/index.ts"],
      "@budgt/shared/services": ["libs/shared/services/src/index.ts"],
      "@budgt/shared/types": ["libs/shared/types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
